{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:css": "npx tailwindcss -i ./themes/hexo-deveye/source/css/tailwind.css -o ./themes/hexo-deveye/source/css/main.css",
    "watch:css": "npx tailwindcss -i ./themes/hexo-deveye/source/css/tailwind.css -o ./themes/hexo-deveye/source/css/main.css --watch",
    "dev": "npm run watch:css & hexo server",
    "build": "npm run build:css && hexo generate"
  },
  "hexo": {
    "version": "7.3.0"
  },
  "dependencies": {
    "hexo": "^7.3.0",
    "hexo-deployer-git": "^2.1.0",
    "hexo-filter-mermaid-diagrams": "^1.0.5",
    "hexo-generator-archive": "^0.1.5",
    "hexo-generator-category": "^0.1.3",
    "hexo-generator-feed": "^3.0.0",
    "hexo-generator-index": "^0.2.1",
    "hexo-generator-searchdb": "^1.5.0",
    "hexo-generator-tag": "^0.2.0",
    "hexo-renderer-ejs": "^0.3.1",
    "hexo-renderer-markdown-it": "^7.1.1",
    "hexo-renderer-stylus": "^0.3.3",
    "hexo-server": "^0.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.5",
    "tailwindcss": "^3.4.0"
  }
}
