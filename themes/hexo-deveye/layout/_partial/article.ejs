<article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden mb-8">
    <div class="relative">
        <a href="<%- url_for(post.path) %>" class="block" rel="bookmark">
            <%
                var mod = i % 9;
                var default_url = "/images/cover/"+ mod +".jpg";
            %>
            <img src="<%- post.cover || default_url %>" alt="" class="w-full h-48 object-cover"> 
        </a>
    </div>
    <div class="p-6">
        <header class="text-center mb-6">
            <h2 class="text-2xl font-bold mb-2">
                <a href="<%- url_for(post.path) %>" class="text-gray-900 dark:text-gray-100 hover:text-primary-600 dark:hover:text-primary-400">
                    <%= post.title %>
                </a>
            </h2>
            <div class="text-sm text-gray-600 dark:text-gray-400">
                <span>
                    <time datetime="<%- date(post.date, 'YYYY/M/D') %>" class="mr-2">
                        <%- date(post.date, 'YYYY/M/D') %>
                    </time>
                </span>
                <span>by <a href="#" class="hover:text-primary-600 dark:hover:text-primary-400">
                    <%= post.author || theme.default_post_author %>
                </a></span>
            </div>
        </header>

        <footer class="mt-6 pt-4 border-t border-gray-200 dark:border-gray-700">
            <div class="flex flex-wrap items-center justify-between">
                <div class="space-x-2">
                    <% if (post.categories && post.categories.length){ %>
                        <%- list_categories(post.categories, {
                            show_count: false,
                            class: 'inline-block px-3 py-1 text-sm bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full hover:bg-gray-200 dark:hover:bg-gray-600',
                            style: 'none'
                        }) %>
                    <% } %>
                    
                    <% if (post.tags && post.tags.length){ %>
                        <%- list_tags(post.tags, {
                            show_count: false,
                            class: 'inline-block px-3 py-1 text-sm bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full hover:bg-gray-200 dark:hover:bg-gray-600',
                            style: 'none'
                        }) %>
                    <% } %>
                </div>
                <div class="mt-4 sm:mt-0">
                    <a href="<%- url_for(post.path) %>" class="inline-block px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors">
                        <%= theme.excerpt_link %>
                    </a>
                </div>
            </div>
        </footer>
    </div>
</article>
