<!-- 悬浮目录 - 固定在左侧空白区域 -->
<div id="floating-toc" class="hidden">
    <div id="toc-panel" class="z-40 glass-panel rounded-xl flex flex-col" style="display: none;">
        <div class="p-4 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white flex items-center">
                <%- icon('bar4', 'w-5 h-5 mr-2 text-blue-600 dark:text-blue-400' ) %>
                    目录
            </h3>
        </div>
        <div class="p-4 overflow-y-auto">
            <nav id="toc-nav" class="toc-nav">
                <!-- 目录内容将由JavaScript生成 -->
            </nav>
        </div>
    </div>
</div>
<!-- 悬浮目录功能 -->
<% if (is_post()) { %>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const floatingToc = document.getElementById('floating-toc');
            const tocPanel = document.getElementById('toc-panel');
            const tocNav = document.getElementById('toc-nav');
            const postContent = document.getElementById('post-content');

            if (!floatingToc || !tocPanel || !tocNav || !postContent) return;

            // Move TOC to body to avoid positioning issues with glassmorphism containers
            document.body.appendChild(floatingToc);

            // 生成目录
            function generateTOC() {
                const headings = postContent.querySelectorAll('h1, h2, h3, h4, h5, h6');
                if (headings.length === 0) return false;

                let tocHTML = '<ul class="toc-list">';
                let currentLevel = 0;

                headings.forEach((heading, index) => {
                    const level = parseInt(heading.tagName.charAt(1));
                    const text = heading.textContent || heading.innerText;
                    const id = heading.id || `toc-${index}`;

                    // 为标题添加ID（如果没有的话）
                    if (!heading.id) {
                        heading.id = id;
                    }

                    // 处理层级 for <ul> tags
                    if (level > currentLevel) {
                        for (let i = currentLevel; i < level; i++) {
                            if (i > 0) tocHTML += '<ul class="toc-list">';
                        }
                    } else if (level < currentLevel) {
                        for (let i = currentLevel; i > level; i--) {
                            tocHTML += '</ul>';
                        }
                    }

                    tocHTML += `
                <li class="toc-item toc-level-${level}">
                    <a href="#${id}" class="toc-link" data-target="${id}">
                        <span class="toc-text">${text}</span>
                    </a>
                </li>
            `;

                    currentLevel = level;
                });

                // 关闭剩余的ul标签
                for (let i = currentLevel; i > 1; i--) {
                    tocHTML += '</ul>';
                }
                tocHTML += '</ul>';

                tocNav.innerHTML = tocHTML;
                return true;
            }

            // 精确定位目录在左侧空白区域
            function positionTocInLeftMargin() {
                const mainContent = document.querySelector('.main-content');
                const tocPanel = document.getElementById('toc-panel');
                const postContent = document.querySelector('#post-content');

                if (!mainContent || !tocPanel || !postContent) return;

                const mainContentRect = mainContent.getBoundingClientRect();
                const leftSpace = mainContentRect.left;

                const tocWidth = 280;
                const marginBuffer = 32;

                if (leftSpace >= tocWidth + marginBuffer) {
                    const left = leftSpace - tocWidth - marginBuffer;
                    const postContentRect = postContent.getBoundingClientRect();
                    // Since we moved TOC to body, absolute positioning is relative to the document
                    // So we need to include scroll position in top calculation
                    const top = postContentRect.top + window.pageYOffset - 20;

                    tocPanel.style.left = left + 'px';
                    tocPanel.style.width = tocWidth + 'px';
                    tocPanel.style.top = top + 'px';
                    tocPanel.style.display = 'flex';
                } else {
                    tocPanel.style.display = 'none';
                }
            }

            // 初始化目录
            if (generateTOC()) {
                floatingToc.classList.remove('hidden');

                let isTocFixed = false;
                let ticking = false;

                function onWindowScroll() {
                    if (ticking) return;

                    ticking = true;
                    requestAnimationFrame(() => {
                        // --- 1. 高亮当前章节 ---
                        const headings = postContent.querySelectorAll('h1, h2, h3, h4, h5, h6');
                        let activeHeadingId = null;
                        for (let i = headings.length - 1; i >= 0; i--) {
                            if (headings[i].getBoundingClientRect().top <= 100) {
                                activeHeadingId = headings[i].id;
                                break;
                            }
                        }
                        updateActiveTOCItem(activeHeadingId);

                        // --- 2. 处理面板固定/绝对定位 ---
                        const mainContent = document.querySelector('.main-content');
                        if (mainContent) {
                            const shouldFix = mainContent.getBoundingClientRect().top < 100;
                            if (shouldFix && !isTocFixed) {
                                isTocFixed = true;
                                positionTocInLeftMargin();
                                tocPanel.classList.add('is-fixed');
                            } else if (!shouldFix && isTocFixed) {
                                isTocFixed = false;
                                tocPanel.classList.remove('is-fixed');
                                // Reset to absolute position when un-fixing
                                positionTocInLeftMargin();
                            }
                        }

                        ticking = false;
                    });
                }

                // 定位目录
                positionTocInLeftMargin();

                // 监听滚动和窗口大小改变
                window.addEventListener('scroll', onWindowScroll);
                window.addEventListener('resize', positionTocInLeftMargin);

                // 初始检查
                onWindowScroll();

                // 目录点击事件
                tocNav.addEventListener('click', function (e) {
                    e.preventDefault();
                    const link = e.target.closest('.toc-link');
                    if (!link) return;

                    const targetId = link.getAttribute('data-target');
                    const targetElement = document.getElementById(targetId);

                    if (targetElement) {
                        // 平滑滚动到目标位置
                        const headerOffset = 80; // 考虑固定头部的高度
                        const elementPosition = targetElement.getBoundingClientRect().top;
                        const offsetPosition = elementPosition + window.pageYOffset - headerOffset;

                        window.scrollTo({
                            top: offsetPosition,
                            behavior: 'smooth'
                        });

                        // 更新活跃状态
                        updateActiveTOCItem(targetId);
                    }
                });

                // 滚动时高亮当前章节
                function updateActiveTOCItem(activeId) {
                    // 移除所有活跃状态
                    tocNav.querySelectorAll('.toc-link').forEach(link => {
                        link.classList.remove('active');
                    });

                    // 添加当前活跃状态
                    if (activeId) {
                        const activeLink = tocNav.querySelector(`[data-target="${activeId}"]`);
                        if (activeLink) {
                            activeLink.classList.add('active');
                        }
                    }
                }
            }
        });
    </script>

    <!-- 左侧目录样式 -->
    <style>
        #toc-panel {
            position: absolute;
            transition: top 0.3s ease, transform 0.3s ease;
        }

        #toc-panel.is-fixed {
            position: fixed;
            top: 100px !important;
            max-height: calc(100vh - 120px);
        }

        /* 目录列表样式 */
        .toc-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .toc-list .toc-list {
            margin-left: 0.75rem;
            margin-top: 0.2rem;
        }

        .toc-item {
            margin: 0.2rem 0;
        }

        .toc-link {
            display: flex;
            align-items: center;
            padding: 0.35rem 0.5rem;
            text-decoration: none;
            color: #6b7280;
            border-radius: 0.375rem;
            transition: all 0.2s ease;
            font-size: 0.8rem;
            line-height: 1.2rem;
            min-height: 1.8rem;
        }

        .toc-link:hover {
            background-color: rgba(59, 130, 246, 0.1);
            color: #2563eb;
            transform: translateX(3px);
        }

        .toc-link.active {
            background-color: rgba(59, 130, 246, 0.15);
            color: #2563eb;
            font-weight: 600;
            border-left: 3px solid #2563eb;
            padding-left: 0.5rem;
        }

        .toc-text {
            flex: 1;
            line-height: 1.3;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            word-break: break-word;
        }

        /* 不同层级的样式 */
        .toc-level-1 .toc-link {
            font-weight: 600;
            font-size: 0.875rem;
        }

        .toc-level-2 .toc-link {
            font-size: 0.8rem;
        }

        .toc-level-3 .toc-link,
        .toc-level-4 .toc-link,
        .toc-level-5 .toc-link,
        .toc-level-6 .toc-link {
            font-size: 0.75rem;
        }

        /* 深色模式 */
        .dark .toc-link {
            color: #9ca3af;
        }

        .dark .toc-link:hover {
            background-color: rgba(59, 130, 246, 0.2);
            color: #60a5fa;
        }

        .dark .toc-link.active {
            background-color: rgba(59, 130, 246, 0.25);
            color: #60a5fa;
            border-left-color: #60a5fa;
        }

        /* 响应式设计 */
        @media (max-width: 1023px) {

            /* 小屏幕：隐藏目录 */
            #floating-toc {
                display: none !important;
            }

            #toc-panel {
                display: none !important;
            }
        }

        /* 悬浮目录的滚动条样式 */
        #toc-panel .overflow-y-auto::-webkit-scrollbar {
            width: 6px;
        }

        #toc-panel .overflow-y-auto::-webkit-scrollbar-track {
            background: transparent;
        }

        #toc-panel .overflow-y-auto::-webkit-scrollbar-thumb {
            background: rgba(156, 163, 175, 0.4);
            border-radius: 3px;
        }

        .dark #toc-panel .overflow-y-auto::-webkit-scrollbar-thumb {
            background: rgba(75, 85, 99, 0.6);
        }
    </style>
    <% } %>