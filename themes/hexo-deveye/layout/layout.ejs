<!DOCTYPE html>
<html lang="zh-CN" class="scroll-smooth">
	<%- partial('_partial/head') %>
	<%
		var page_class = 'category';
		if(is_post()){
			page_class = 'single';
		}
	%>
	<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300 <%= page_class %>">
		<div class="flex flex-col">
			<!-- 头部导航 -->
			<%- partial('_partial/header') %>
			
			<!-- 主要内容区域 -->
			<main class="flex-1">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
					<div class="main-layout flex flex-col xl:flex-row gap-8">
						<!-- 主内容区 -->
						<div class="main-content flex-1">
							<div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-8 md:p-12 lg:p-16">
								<%- body %>
							</div>
						</div>
						
						<!-- 侧边栏 - 移动端隐藏 -->
						<aside class="main-sidebar hidden xl:block xl:w-80 xl:flex-shrink-0">
							<%- partial('_partial/sidebar') %>
						</aside>
					</div>
				</div>
			</main>
			
			<!-- 页脚 -->
			<%- partial('_partial/footer') %>
		</div>
	</body>
</html>
