<!-- 搜索功能 -->
<div class="max-w-2xl mx-auto mb-8">
    <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                    d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                    clip-rule="evenodd"></path>
            </svg>
        </div>
        <input type="text" id="search-input"
            class="block w-full pl-10 pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg leading-5 bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-lg"
            placeholder="输入关键词搜索..." autocomplete="off">
    </div>

    <!-- 搜索提示 -->
    <div class="mt-4 text-center">
        <p class="text-sm text-gray-500 dark:text-gray-400">
            支持搜索文章标题、内容和标签
        </p>
    </div>
</div>

<!-- 搜索结果 -->
<div id="search-results" class="space-y-6">
    <!-- 搜索结果将在这里显示 -->
</div>

<!-- 无结果提示 -->
<div id="no-results" class="hidden text-center py-12">
    <div class="text-gray-400 mb-4">
        <svg class="w-8 h-8 mx-auto" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
                d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z"
                clip-rule="evenodd"></path>
        </svg>
    </div>
    <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-2">没有找到相关内容</h3>
    <p class="text-gray-500 dark:text-gray-400">尝试使用不同的关键词进行搜索</p>
</div>

<!-- 加载状态 -->
<div id="search-loading" class="hidden text-center py-12">
    <div class="inline-flex items-center">
        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
            </path>
        </svg>
        <span class="text-muted">搜索中...</span>
    </div>
</div>

<!-- 搜索脚本 -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('search-input');
        const searchResults = document.getElementById('search-results');
        const noResults = document.getElementById('no-results');
        const searchLoading = document.getElementById('search-loading');

        let searchData = [];

        // 加载搜索数据
        fetch('/search.json')
            .then(response => response.json())
            .then(data => {
                searchData = data;
            })
            .catch(error => {
                console.error('Error loading search data:', error);
            });

        // 搜索功能
        function performSearch(query) {
            if (!query.trim()) {
                searchResults.innerHTML = '';
                noResults.classList.add('hidden');
                return;
            }

            searchLoading.classList.remove('hidden');
            noResults.classList.add('hidden');

            setTimeout(() => {
                const results = searchData.filter(item => {
                    const searchText = (item.title + ' ' + item.content + ' ' + (item.tags || []).join(' ')).toLowerCase();
                    return searchText.includes(query.toLowerCase());
                });

                searchLoading.classList.add('hidden');

                if (results.length === 0) {
                    searchResults.innerHTML = '';
                    noResults.classList.remove('hidden');
                    return;
                }

                noResults.classList.add('hidden');

                const resultsHTML = results.map(item => `
                <article class="bg-surface-muted rounded-lg p-6 hover:shadow-md transition-shadow duration-300 border border-surface">
                    <h3 class="text-xl font-semibold mb-3">
                        <a href="${item.url}" class="text-gray-900 dark:text-gray-100 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                            ${highlightText(item.title, query)}
                        </a>
                    </h3>
                    
                    ${item.content ? `
                        <p class="text-muted mb-4 line-clamp-3">
                            ${highlightText(item.content.substring(0, 200) + '...', query)}
                        </p>
                    ` : ''}
                    
                    <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
                        <div class="flex items-center space-x-4">
                            ${item.date ? `
                                <time class="flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                                    </svg>
                                    ${item.date}
                                </time>
                            ` : ''}
                            
                            ${item.categories && item.categories.length ? `
                                <div class="flex items-center space-x-2">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                                    </svg>
                                    ${item.categories.join(', ')}
                                </div>
                            ` : ''}
                        </div>
                        
                        <a href="${item.url}" class="text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-medium flex items-center transition-colors">
                            阅读更多
                            <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </article>
            `).join('');

                searchResults.innerHTML = resultsHTML;
            }, 300);
        }

        // 高亮搜索关键词
        function highlightText(text, query) {
            if (!query.trim()) return text;
            const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
            return text.replace(regex, '<mark class="bg-yellow-200 dark:bg-yellow-800 px-1 rounded">$1</mark>');
        }

        // 搜索输入事件
        let searchTimeout;
        searchInput.addEventListener('input', function () {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                performSearch(this.value);
            }, 300);
        });

        // 回车搜索
        searchInput.addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                clearTimeout(searchTimeout);
                performSearch(this.value);
            }
        });

        // 自动聚焦搜索框
        searchInput.focus();
    });
</script>
