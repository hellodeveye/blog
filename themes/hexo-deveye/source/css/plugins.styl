.hljs {
  display: block;
  overflow-x: auto;
  padding: 0.5em;
  background: #f6f8fa;
  color: #24292e;
}
.hljs-comment,
.hljs-quote {
  color: #6a737d;
  font-style: italic;
}
.hljs-keyword,
.hljs-selector-tag,
.hljs-section,
.hljs-name {
  color: #d73a49;
  font-weight: normal;
}
.hljs-variable,
.hljs-template-variable {
  color: #e36209;
}
.hljs-string,
.hljs-selector-attr,
.hljs-selector-pseudo,
.hljs-regexp {
  color: #032f62;
}
.hljs-literal,
.hljs-symbol,
.hljs-bullet,
.hljs-meta,
.hljs-number,
.hljs-link {
  color: #005cc5;
}
.hljs-title,
.hljs-doctag,
.hljs-type,
.hljs-attr,
.hljs-built_in,
.hljs-builtin-name,
.hljs-params {
  color: #6f42c1;
}
.hljs-attribute,
.hljs-subst {
  color: #24292e;
}
.hljs-formula {
  background-color: #f6f8fa;
  font-style: italic;
}
.hljs-selector-id,
.hljs-selector-class {
  color: #6f42c1;
}
.hljs-addition {
  background-color: #f0fff4;
}
.hljs-deletion {
  background-color: #ffeef0;
}
.hljs-doctag,
.hljs-strong {
  font-weight: normal;
}
.hljs-emphasis {
  font-style: italic;
}

/* 代码块样式 */
.highlight {
  background: #f6f8fa;
  border: 1px solid #dfe2e5;
  border-radius: 6px;
  margin: 1.5em 0;
  overflow: hidden;
  padding: 0;
  font-size: 14px;
  line-height: 1.5;
  font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, Courier, monospace;
}

.highlight table {
  width: auto;
  min-width: 100%;
  border-collapse: collapse;
  margin: 0;
  font-size: inherit;
}

.highlight td {
  padding: 0;
  border: none;
  vertical-align: top;
}

.highlight .gutter {
  padding: 0.8em 1em;
  background-color: #fff;
  border-right: 1px solid #dfe2e5;
  text-align: right;
  user-select: none;
}

.highlight .code {
  padding: 0.8em 1em;
  width: 100%;
  overflow-x: auto !important;
  white-space: nowrap !important;
}

.highlight .gutter pre {
  margin: 0;
  padding: 0;
  background: transparent;
  border: none;
  font-size: inherit;
  line-height: inherit;
  font-family: inherit;
  white-space: pre !important;
  word-break: normal !important;
  overflow-wrap: normal !important;
  color: #6a737d;
}

.highlight .code pre {
  margin: 0;
  padding: 0;
  background: transparent;
  border: none;
  font-size: inherit;
  line-height: inherit;
  font-family: inherit;
  white-space: pre !important;
  word-break: normal !important;
  overflow-wrap: normal !important;
  color: #24292e;
  overflow: visible;
}

/* 强制修复主题样式冲突 */
.highlight .title {
  font-size: inherit !important;
  font-weight: normal !important;
}

.highlight code strong, 
.highlight code b,
.highlight strong,
.highlight b {
  font-weight: normal !important;
}

/* 滚动条样式 */
.highlight .code::-webkit-scrollbar {
  height: 8px;
}
.highlight .code::-webkit-scrollbar-track {
  background: #f1f1f1;
}
.highlight .code::-webkit-scrollbar-thumb {
  background: #ccc;
  border-radius: 4px;
}
.highlight .code::-webkit-scrollbar-thumb:hover {
  background: #aaa;
}
